<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Configurations>legacy-il2cpp;modern-il2cpp;legacy-mono;modern-mono</Configurations>
        <Platforms>AnyCPU</Platforms>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <LangVersion>10</LangVersion>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <AllowedReferenceRelatedFileExtensions>none</AllowedReferenceRelatedFileExtensions>
        <DebugType>none</DebugType>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'legacy-il2cpp' Or '$(Configuration)' == 'modern-il2cpp'">
        <TargetFramework>net6.0</TargetFramework>
        <OutputPath>$(BepInExDir)\mods\Il2Cpp\uuvr-il2cpp\plugins</OutputPath>
        <DefineConstants>CPP</DefineConstants>
        <CppBackend>true</CppBackend>
        <LibsFolderBase>lib\il2cpp</LibsFolderBase>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'legacy-mono' Or '$(Configuration)' == 'modern-mono'">
        <TargetFramework>net35</TargetFramework>
        <OutputPath>$(BepInExDir)\mods\Mono\uuvr-mono\plugins</OutputPath>
        <DefineConstants>MONO</DefineConstants>
        <MonoBackend>true</MonoBackend>
        <LibsFolderBase>lib\mono</LibsFolderBase>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'legacy-mono' Or '$(Configuration)' == 'legacy-il2cpp'">
        <LibsFolder>$(LibsFolderBase)\legacy</LibsFolder>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'modern-mono' Or '$(Configuration)' == 'modern-il2cpp'">
        <LibsFolder>$(LibsFolderBase)\modern</LibsFolder>
    </PropertyGroup>

    <ItemGroup Condition="$(MonoBackend) == true">
        <PackageReference Include="BepInEx.Core" Version="5.4.16" />
    </ItemGroup>

    <ItemGroup Condition="$(CppBackend) == true">
        <PackageReference Include="BepInEx.IL2CPP" Version="6.0.0-pre.1" />
        <PackageReference Include="BepInEx.Core" Version="6.0.0-pre.1" />
    </ItemGroup>
    
    <ItemGroup Condition=" '$(Configuration)' == 'legacy-il2cpp' ">
        <Reference Include="Il2Cppmscorlib">
            <HintPath>$(LibsFolder)\Il2Cppmscorlib.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="Il2CppSystem.Core">
            <HintPath>$(LibsFolder)\Il2CppSystem.Core.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="UnityEngine">
            <HintPath>$(LibsFolder)\UnityEngine.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="UnityEngine.CoreModule">
            <HintPath>$(LibsFolder)\UnityEngine.CoreModule.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="UnityEngine.UI">
            <HintPath>$(LibsFolder)\UnityEngine.UI.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="UnityEngine.UIModule">
            <HintPath>$(LibsFolder)\UnityEngine.UIModule.dll</HintPath>
            <Private>False</Private>
        </Reference>
    </ItemGroup>

    <ItemGroup Condition=" '$(Configuration)' == 'legacy-mono' ">
        <Reference Include="UnityEngine">
            <HintPath>$(LibsFolder)\UnityEngine.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="UnityEngine.CoreModule">
            <HintPath>$(LibsFolder)\UnityEngine.CodeModule.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="UnityEngine.UI">
            <HintPath>$(LibsFolder)\UnityEngine.UI.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="UnityEngine.UIModule">
            <HintPath>$(LibsFolder)\UnityEngine.UIModule.dll</HintPath>
            <Private>False</Private>
        </Reference>
    </ItemGroup>
</Project>
